{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "rollup/parseAst": ["./src/types/rollup-parseAst.d.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*",
    "node_modules",
    "dist"
  ]
}